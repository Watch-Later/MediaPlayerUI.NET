<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:HanumanInstitute.MediaPlayer.Wpf.Mpv"
		xmlns:ui="clr-namespace:HanumanInstitute.MediaPlayer.Wpf;assembly=MediaPlayer.Wpf"
		xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms">

    <Style TargetType="{x:Type local:MpvPlayerHost}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MpvPlayerHost}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
							BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <ui:ExtendedWindowsFormsHost x:Name="PART_Host" Focusable="False">
                                <wf:Panel />
                            </ui:ExtendedWindowsFormsHost>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
